{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://plateyplatey.com/schemas/plateydocument.json",
  "type": "object",

  "properties": {

    "fileSchema": {
      "type": "object",
      "properties": { "version": { "type": "string" }},
      "required": ["version"]
    },

    "properties": {
      "type": "object",
      "properties": { "documentName": { "type": "string" }},
      "required": ["documentName"]
    },

    "plateLayouts": { "type": "object" },
    "tableSchemas": { "type": "object" },
    "workspace": { "type": "object" },
    "plates": { "type": "object" }
  },

  "required": [
    "fileSchema",
    "properties",
    "plateLayouts",
    "tableSchemas",
    "workspace",
    "plates"
  ]
}
